{
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/api/vercel.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/vercel.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ],
  "outputDirectory": "frontend/dist"
}

